<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Create New Event</h2>
          <%= form_with(model: event) do |form| %>
            <% if event.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

                <ul>
                  <% event.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :title, class: "form-label", style: "display: block" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :start_datetime, class: "form-label", style: "display: block" %>
              <%= form.datetime_select :start_datetime, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :duration, class: "form-label", style: "display: block" %>
              <%= form.number_field :duration, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :location, class: "form-label", style: "display: block" %>
              <%= form.text_field :location, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :description, class: "form-label", style: "display: block" %>
              <%= form.text_area :description, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :price, class: "form-label", style: "display: block" %>
              <%= form.number_field :price, class: "form-control" %>
            </div>

            <br>
            <div class="text-center">
              <%= form.submit "Create Event", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
