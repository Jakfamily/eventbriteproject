<div class="text-center">
  <h1>Dashboard</h1>
</div>

<div class="row mt-5">
  <div class="col-md-6">
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Users</h5>
        <p class="card-text">Total users: <%= User.count %></p>
        <!-- Add any other information or statistics about users -->
        <%= link_to "Manage Users", admin_users_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Events</h5>
        <p class="card-text">Total events: <%= Event.count %></p>
        <!-- Add any other information or statistics about events -->
        <%= link_to "Manage Events", admin_events_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

