<div class="card">
  <div class="card-body">
    <h1 class="card-title text-center"><%= @author.first_name %></h1>
    <p class="card-text text-center"><%= @author.description %></p>
    <h2 class="text-center">Événements créés par <%= @author.first_name %></h2>
    <br>
    <br>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-4">
          <div class="event-card">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.description %></p>
            <p class="card-text">Date: <%= event.start_datetime.to_date %></p>
            <p class="card-text">Location: <%= event.location %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
