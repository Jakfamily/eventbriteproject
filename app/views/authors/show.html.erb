<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center">
        <h1><%= @author.first_name %></h1>
        <p><%= @author.description %></p>
        <h2>Événements créés par <%= @author.first_name %></h2>
      </div>
      <br>
      <br>
      <div class="row">
        <% @events.each_slice(4) do |event_row| %>
          <% event_row.each do |event| %>
            <div class="col-md-3">
              <div class="card mb-4">
                <div class="card-body">
                  <h5 class="card-title"><%= event.title %></h5>
                  <p class="card-text"><%= event.description %></p>
                  <p class="card-text">Date: <%= event.start_datetime.to_date %></p>
                  <p class="card-text">Location: <%= event.location %></p>
                  <p class="card-text">Duration: <%= event.duration %> minutes</p>
                  <p class="card-text">Price: <%= number_to_currency(event.price, unit: '€') %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="text-center">
        <%= link_to "Retour à l'accueil", root_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
