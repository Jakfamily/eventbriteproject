<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Sign in</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", required: true %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: "form-control", autocomplete: "current-password", required: true %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.submit "Se connecter", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
